@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Rhino.Identity.Models.Account
@model LoginModel

<form class="form-inline" method="post" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
    <div>
        <label asp-for="Email" class="">Login:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password" class="">Password:</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        @Html.ValidationSummary(excludePropertyErrors:true)
    </div>
    <button type="submit" class="nav-link btn btn-link text-dark">Login</button>
</form>